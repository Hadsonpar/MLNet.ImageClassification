@{
    ViewData["Title"] = "ML.NET con TensorFlow"; }

<h1>Clasificación de imágenes</h1>
<h3>ASP.NET Core mediante ML.NET con TensorFlow</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <input name="imagec" id="imagec" type="file" />
            <button class="btn btn-sm btn-primary" type="submit">Classify</button>
        </form>
    </div>
    <div class="col-md-6">
        @if (ViewBag.Probability != null)
        {
            <h3>Predicción</h3>
            <h6>Etiqueta: @ViewBag.PredictedLabel</h6>
            <h6>Probabilidad: @ViewBag.Probability</h6>

            @if (@ViewBag.PredictedMessage == "S")
            {
                <h1 style="color: red">Imagen CON contenido pornografico</h1>
            }
            else
            {
                <h1 style="color: green">Imagen SIN contenido pornografico</h1>
            }
        }
    </div>
</div>

